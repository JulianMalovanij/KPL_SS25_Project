{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Python venv",
      "type": "shell",
      "command": "${workspaceFolder}/setup/setup_venv.sh",
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": [
            "-c"
          ]
        }
      },
      "windows": {
        "command": "powershell",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-File",
          "${workspaceFolder}\\setup\\setup_venv.ps1"
        ]
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Start Streamlit App",
      "type": "shell",
      "command": ".venv/bin/streamlit",
      "args": [
        "run",
        "main.py"
      ],
      "windows": {
        "command": ".\\.venv\\Scripts\\streamlit.exe",
        "args": [
          "run",
          "main.py"
        ]
      },
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": [
            "-c"
          ]
        }
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "dependsOn": "Setup Python venv"
    }
  ]
}